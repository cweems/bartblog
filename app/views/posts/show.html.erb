<div class="row">  
  <div class="col-md-8 offset-md-2">
    <div class="card mb-2">
      <div class="card-header">
        This Post
        <%= link_to "Edit", edit_post_path(@post), { class: "btn btn-link float-right" } %>
      </div>
      <div class="card-body">
        <h4 class="text-center">Car: <%= @post.title %> <%= @post.car_end %></h4>
        <p class="text-center text-muted"><%= @post.created_at.strftime('%b %d, %Y') %></p>
        <div>
          <p><%= raw @post.body %></p>
        </div>
      </div>
    </div>
  </div>
</div>

<% if @related_posts.length > 1 %>
<div class="row">
  <div class="col-md-8 offset-md-2">
    <div class="card">
      <div class="card-header">
        Your Posts from Car <%= @post.title %>
      </div>
      <ul class="list-group list-group-flush">
        <% @related_posts.each do |post| %>
        <% if post.id != @post.id %>
        <div class="list-group-item">
          <span class="text-center">Car: <%= post.title %> <%= post.car_end %></span>
          <span class="text-center text-muted"><%= post.created_at.strftime('%b %d, %Y') %></span>
          <span><%= raw(post.body).truncate(100) %></span>
          <%= link_to "View", post_path(post), { class: "btn btn-link float-right" } %>
        </div>
        <% end %>
        <% end %>
      </ul>
    </div>
  </div>
</div>
<% end %>
